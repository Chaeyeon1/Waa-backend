<html lang='en' xmlns='http://www.w3.org/1999/xhtml'>
  <head>
    <meta http-equiv='Content-Type' content='text/html; charset=UTF-8' />
    <title>HTML Email Template</title>
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  </head>
  <body>
    <!-- 본문 -->
    <table
      width='100%'
      cellpadding='0'
      cellspacing='0'
      style="border: '0px'; background-color: #ffffff; width: 100%"
      class='container'
    >
      <tr style='display: block; width: 100%; margin-bottom: 20px'>
        <td style='display: block; width: 100%; text-align: center'></td>
      </tr>
      <!-- 본문 제목 -->
      <tr width='100%' style='display: block; margin-bottom: 20px'>
        <td
          style='
            margin-top: 4px;
            display: block;
            width: 100%;
            font-size: 20px;
            color: #000000;
            text-align: left;
          '
        >
          이메일 인증 번호
        </td>
      </tr>
      <tr>
        <td style='border-radius: 8px; display: flex'>
          <div
            style='
              background: #f3f3f3;
              padding: 20px 34px 12px 34px;
              width: 450px;
              border-radius: 8px;
              color: #4b5550;
              font-size: 15px;
            '
          >
            <div style='margin-bottom: 8px'>인증번호 : {{code}}</div>
          </div>
        </td>
      </tr>
    </table>
  </body>
</html>